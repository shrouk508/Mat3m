@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="container-fluid">
    <h1 style="margin:5px">تسجيل دخول  </h1>
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h4>برجاء ادخال بيناتك لتسجيل الدخول</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"> البريد الاليكتروني</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">كلمه المرور</label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox" style="margin:5px">
                            <label asp-for="Input.RememberMe">ذكرني
                                <input asp-for="Input.RememberMe" />
                               
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" style="margin:5px">تسجيل دخول</button>
                    </div>
                    <div class="form-group">
                        @*<p>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="btn btn">هل نسيت كلمه المرور?</a>
                        </p>*@
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl "class="btn btn-danger"style="margin:5px">نسيت كلمه المرور</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-6 col-md-offset-2">
