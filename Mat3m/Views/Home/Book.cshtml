@model Booking
<div class="container">
    <main id="main">

        <!-- ======= Breadcrumbs ======= -->
        <section class="breadcrumbs">
            <div class="container">
                <center>
                    <h2 class="bi-text-center ">لحجز طاوله</h2>
                </center>
            </div>
        </section><!-- End Breadcrumbs -->

        <section id="contact" class="contact">

            <div class="container" data-aos="fade-up">

                <header class="section-header">

                    <p>حجز الطاولة</p>
                </header>

                <div class="row">

                    <div class="col-lg-12">


                    </div>

                    <div class="col-lg-6">
                        <form asp-action="BookingService" method="post" >
                            <div class="row gy-4">

                                <div class="col-md-12">
                                    <input type="text" asp-for="Name" class="form-control" placeholder=" الاسم " required>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>


                                <div class="col-md-12">
                                    <input type="number" class="form-control" asp-for="Phone" placeholder="رقم الهاتف" required>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <input type="text" class="form-control" asp-for="TableNumber" placeholder="رقم الطاولة" required>
                                    <span asp-validation-for="TableNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <input type="datetime-local" class="form-control" asp-for="DateTime" placeholder="تاريخ الحجز" required>
                                    <span asp-validation-for="DateTime" class="text-danger"></span>
                                </div>
                                <div class="col-md-12 text-center  hover">
                                    <button class="btn btn-info" type="submit" style="padding: 10px 30px; color:aliceblue"><strong>تاكيد الحجز</strong></button>
                                </div>

                            </div>
                        </form>

                    </div>

                </div>

            </div>

        </section><!-- End Contact Section -->

    </main><!-- End #main -->
</div>